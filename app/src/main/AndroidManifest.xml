<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.CAMERA"
        tools:ignore="PermissionImpliesUnsupportedChromeOsHardware" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmojiTest">
        <activity
            android:name=".ResultActivity"
            android:exported="false" />
        <activity
            android:name=".LoadImageScreenBGActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CustomizeSmiley"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoadImageScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateIconActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarSplash" />
        <activity
            android:name=".CreateTextActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarSplash"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarSplash">

        </activity>
        <activity
            android:name=".IntroScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarSplash" />
    </application>

</manifest>