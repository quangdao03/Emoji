<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFDFC2"
>
    <include
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_home"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@drawable/bg_home_app"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll_control"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/dp20"
            android:layout_marginTop="@dimen/_110sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/ll_create"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp20"
                app:cardElevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:id="@+id/rl_create"
                    android:background="#FF8E36"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="@font/poppins_semibold_600"
                        android:id="@+id/create"
                        android:layout_marginStart="@dimen/dp20"
                        android:textColor="@color/white"
                        style="@style/TextViewBase"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="@string/create"
                        android:textSize="@dimen/sp18" />
                    <TextView
                        android:fontFamily="@font/poppins_semibold_600"
                        android:layout_below="@+id/create"
                        android:layout_marginStart="@dimen/dp20"
                        android:textColor="@color/white"
                        style="@style/TextViewBase"
                        android:text="@string/Emoji"
                        android:textSize="@dimen/sp18" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:src="@drawable/smile" />


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:focusable="true"
                android:clickable="true"
                app:strokeColor="@color/white"
                app:strokeWidth="0dp"
                android:id="@+id/ll_mygallery"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#EFF1F1"
                app:cardCornerRadius="@dimen/dp20">

                <RelativeLayout
                    android:id="@+id/rl_create_text"
                    android:background="#5A64FF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/poppins_semibold_600"
                        android:layout_marginStart="@dimen/dp20"
                        android:id="@+id/create_text"
                        android:textColor="@color/white"
                        style="@style/TextViewBase"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="@string/create"
                        android:textSize="@dimen/sp18" />
                    <TextView
                        android:fontFamily="@font/poppins_semibold_600"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_below="@id/create_text"
                        android:textColor="@color/white"
                        style="@style/TextViewBase"
                        android:text="@string/text"
                        android:textSize="@dimen/sp18" />
                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:src="@drawable/create_text" />


                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="@dimen/dp20"
            android:focusable="true"
            android:clickable="true"
            app:strokeColor="@color/white"
            app:strokeWidth="0dp"
            android:layout_marginHorizontal="@dimen/dp20"
            app:cardCornerRadius="@dimen/dp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#FFB787"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dp16"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp20"
                    android:id="@+id/icon"
                    android:src="@drawable/ic_my_create"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="@font/poppins_medium_500"
                    android:textColor="#000654"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp16"
                    android:text="@string/my_creation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>